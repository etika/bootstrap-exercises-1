%section#carousel
  #carousel-home.carousel.slide{"data-ride" => "carousel"}
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#carousel-home"}
      %li{"data-slide-to" => "1", "data-target" => "#carousel-home"}
      %li{"data-slide-to" => "2", "data-target" => "#carousel-home"}
    .carousel-inner
      .carousel-item.active
        %img{src: "/img/woman-camera.jpg"}/
        .carousel-caption
          %h3 A woman with a camera
          %p She is probably taking a picture
      .carousel-item
        %img{src: "/img/spiderweb.jpg"}/
        .carousel-caption
          %h3 So much water
          %p Poor spider
      .carousel-item
        %img{src: "/img/hearthand.jpg"}/
        .carousel-caption
          %h3 Two Hands
          %p One Heart
    %a.left.carousel-control{"data-slide" => "prev", href: "#carousel-home"}
      %span.icon-prev
    %a.right.carousel-control{"data-slide" => "next", href: "#carousel-home"}
      %span.icon-next

